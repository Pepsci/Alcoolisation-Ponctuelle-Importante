    <input type="text" name="title" id="title">
    <br>
    {{#each drink}}
        <br>
        <label for="drink">{{this.drinkName}}</label>
        <input type="number" name="{{this._id}}" id="quantity" value="{{this.drinkName}}">
        <br>
    {{/each}}

    <button>Add</button>
</form>

